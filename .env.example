# ===========================================
# MEMU CONFIGURATION TEMPLATE
# ===========================================

# --- GENERAL ---
SERVER_NAME=memu.local
TZ=UTC

# --- DATABASE ---
# These defaults are safe to keep.
# The installer will generate a secure random DB_PASSWORD for you.
DB_NAME=immich
DB_USER=memu_user
DB_PASSWORD=change_me_if_manual_install

# --- PHOTOS (Immich) ---
UPLOAD_LOCATION=./photos

# --- CHAT (Synapse) ---
SYNAPSE_REPORT_STATS=no

# --- AI & INTELLIGENCE ---
AI_ENABLED=true
# Model selection - Ministral 3B recommended for better quality at similar resource cost
# Options: ministral:3b (recommended), llama3.2, phi3:mini, gemma2:2b
OLLAMA_MODEL=ministral-3:3b

# Controls how many ML models run in parallel (Keep at 1 for low-RAM devices)
MACHINE_LEARNING_WORKERS=1
MACHINE_LEARNING_WORKER_TIMEOUT=120

# Matrix Bot (Generated by Wizard)
MATRIX_BOT_USERNAME=@memu_bot:memu.local
MATRIX_BOT_TOKEN=

# --- REMOTE ACCESS ---
# Get a key from https://login.tailscale.com/admin/settings/keys
TAILSCALE_AUTH_KEY=
