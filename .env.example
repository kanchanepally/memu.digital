# ==========================================
# MEMU SUITE - ENVIRONMENT CONFIGURATION
# ==========================================

# --- GENERAL CONFIGURATION ---
SERVER_NAME=memu.local
TZ=Etc/UTC

# --- DATABASE CREDENTIALS ---
DB_USER=memu
DB_PASSWORD=change_this_to_a_secure_password

# --- PHOTOS (IMMICH) CONFIGURATION ---
UPLOAD_LOCATION=./photos
IMMICH_VERSION=release

# --- CHAT (MATRIX/SYNAPSE) CONFIGURATION ---
SYNAPSE_REPORT_STATS=no

# --- INTELLIGENCE (BOT) CONFIGURATION ---
# The access token for the @memu_bot user.
# You must create this user in Synapse first and get the access token.
# Login to Element, settings -> help & about -> access token.
MATRIX_BOT_USERNAME=@memu_bot:memu.local
MATRIX_BOT_TOKEN=change_this_to_your_bot_token

# --- NETWORKING (CLOUDFLARED) ---
CLOUDFLARED_TOKEN=

# --- SAFETY & AI ---
MACHINE_LEARNING_WORKERS=1
MACHINE_LEARNING_WORKER_TIMEOUT=120
